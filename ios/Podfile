# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.0'
prepare_react_native_project!

ENV['RCT_NEW_ARCH_ENABLED'] = '1' if ENV['RCT_NEW_ARCH_ENABLED'].nil?

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'music_app' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # Patch codegen-generated podspecs BEFORE react_native_post_install
    generated_dir = File.join(__dir__, 'build', 'generated', 'ios')
    if Dir.exist?(generated_dir)
      puts "Patching generated podspecs deployment target to 15.0..."
      Dir.glob(File.join(generated_dir, '*.podspec')).each do |podspec_path|
        content = File.read(podspec_path)
        if content =~ /\"1[5-9]\.[0-9]+\"/ || content =~ /'1[5-9]\.[0-9]+'/
          content.gsub!(/\"1[5-9]\.[0-9]+\"/, '"15.0"')
          content.gsub!(/'1[5-9]\.[0-9]+'/, "'15.0'")
          File.write(podspec_path, content)
          puts "  âœ“ Patched #{File.basename(podspec_path)}"
        end
      end
    end
    
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Ensure all pods have minimum deployment target
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end
    end
  end
end
